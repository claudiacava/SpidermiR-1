citEntry(entry = "Article",
         title        = "SpidermiR: An R/Bioconductor package for integrative network analysis with
    miRNA data",
         author       = personList(as.person("Claudia Cava"),
                                   as.person("Antonio Colaprico"),
                                   as.person("Alex Graudenzi"),
                                   as.person("Gloria Bertoli"),
								   as.person("Tiago C. Silva"),
